<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd">
       
   
   <import resource="datasource.xml"/>
   
   <bean id="connector" class="com.excilys.cdb.persistence.Connector" scope="singleton">
		<property name="dataSource" ref="dataSource"/>
   </bean>
   
   <bean id="computerDao" class="com.excilys.cdb.persistence.impl.ComputerDAOImpl" scope="singleton">
   		<property name="connector" ref="connector"/>
   </bean>
   
   <bean id="companyDao" class="com.excilys.cdb.persistence.impl.CompanyDAOImpl" scope="singleton">
   		<property name="connector" ref="connector"/>
   </bean>
</beans>