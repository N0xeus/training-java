<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<!-- Spring -->
	<context-param>
		<param-name>contextClass</param-name>
		<param-value>
          	org.springframework.web.context.support.AnnotationConfigWebApplicationContext
      	</param-value>
	</context-param>
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>com.excilys.cdb.config.SpringConfig</param-value>
	</context-param>
	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- Servlets -->
	<servlet>
		<servlet-name>Dashboard</servlet-name>
		<servlet-class>com.excilys.cdb.servlet.DashboardServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>AddComputer</servlet-name>
		<servlet-class>com.excilys.cdb.servlet.AddComputerServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>EditComputer</servlet-name>
		<servlet-class>com.excilys.cdb.servlet.EditComputerServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Dashboard</servlet-name>
		<url-pattern>/dashboard</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>AddComputer</servlet-name>
		<url-pattern>/addComputer</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>EditComputer</servlet-name>
		<url-pattern>/editComputer</url-pattern>
	</servlet-mapping>

	<!-- Error pages -->
	<error-page>
		<!-- Forbidden directory listing -->
		<error-code>403</error-code>
		<location>/errors/403.jsp</location>
	</error-page>
	<error-page>
		<!-- Missing resource -->
		<error-code>404</error-code>
		<location>/errors/404.jsp</location>
	</error-page>
	<error-page>
		<!-- Uncaught exception -->
		<error-code>500</error-code>
		<location>/errors/500.jsp</location>
	</error-page>
</web-app>